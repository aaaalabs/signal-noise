<?xml version="1.0" encoding="utf-8"?>
<!-- Signal Wave Widget Background
     Subtle gradient with rounded corners
     No fake depth, just honest materials
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient
        android:angle="135"
        android:startColor="#0A0A0A"
        android:centerColor="#0D0D0D"
        android:endColor="#000000"
        android:type="linear" />

    <corners android:radius="12dp" />

    <!-- Subtle border for definition -->
    <stroke
        android:width="0.5dp"
        android:color="#1A1A1A" />
</shape>