<?xml version="1.0" encoding="utf-8"?>
<!-- Signal Wave Widget 2x2 Layout
     Medium size with more detailed visualization
     Perfect balance of information and aesthetics
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container_2x2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_signal_wave_bg"
    android:padding="12dp">

    <!-- Top Section: Main Metrics -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Ratio Circle -->
        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="12dp">

            <!-- Background Circle -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ratio_circle_bg" />

            <!-- Progress Arc (will be drawn programmatically) -->
            <ImageView
                android:id="@+id/progress_arc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside" />

            <!-- Center Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/ratio_text_2x2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="87"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-thin"
                    android:includeFontPadding="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textSize="10sp"
                    android:textColor="#888888"
                    android:fontFamily="sans-serif-thin"
                    android:includeFontPadding="false"
                    android:layout_marginTop="-2dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- Stats Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Status -->
            <TextView
                android:id="@+id/status_text_2x2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excellent Focus"
                android:textSize="14sp"
                android:textColor="#00ff88"
                android:fontFamily="sans-serif-light" />

            <!-- Streak -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/streak_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-thin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" day streak"
                    android:textSize="11sp"
                    android:textColor="#888888"
                    android:fontFamily="sans-serif-light" />
            </LinearLayout>

            <!-- Mini Stats -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/signal_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S:24"
                    android:textSize="9sp"
                    android:textColor="#00ff88"
                    android:fontFamily="sans-serif"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/noise_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N:6"
                    android:textSize="9sp"
                    android:textColor="#ff8800"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Middle Section: Wave Visualization -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/wave_canvas_2x2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />

        <!-- Hourly Pattern Overlay -->
        <LinearLayout
            android:id="@+id/hourly_pattern"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:alpha="0.5">

            <!-- Will be populated with hourly bars programmatically -->
        </LinearLayout>
    </FrameLayout>

    <!-- Bottom Section: AI Insights (Premium) -->
    <LinearLayout
        android:id="@+id/ai_section_2x2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <!-- AI Icon -->
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ai_icon"
            android:layout_marginEnd="6dp"
            android:alpha="0.8" />

        <!-- AI Text -->
        <TextView
            android:id="@+id/ai_text_2x2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Peak performance in 2 hours"
            android:textSize="10sp"
            android:textColor="#00ff88"
            android:fontFamily="sans-serif-light"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Time -->
        <TextView
            android:id="@+id/update_time_2x2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34"
            android:textSize="9sp"
            android:textColor="#666666"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>

</LinearLayout>