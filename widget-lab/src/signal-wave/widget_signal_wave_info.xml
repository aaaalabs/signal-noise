<?xml version="1.0" encoding="utf-8"?>
<!-- Signal Wave Widget Provider Configuration
     Optimized for battery efficiency and smooth updates
-->
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:description="@string/signal_wave_description"
    android:initialKeyguardLayout="@layout/widget_signal_wave"
    android:initialLayout="@layout/widget_signal_wave"
    android:minWidth="180dp"
    android:minHeight="80dp"
    android:minResizeWidth="110dp"
    android:minResizeHeight="60dp"
    android:previewImage="@drawable/signal_wave_preview"
    android:previewLayout="@layout/widget_signal_wave"
    android:resizeMode="horizontal|vertical"
    android:targetCellWidth="3"
    android:targetCellHeight="2"
    android:updatePeriodMillis="0"
    android:widgetCategory="home_screen|keyguard"
    android:widgetFeatures="reconfigurable|configuration_optional">

    <!-- Note: updatePeriodMillis=0 means we handle updates programmatically
         for better battery efficiency -->

</appwidget-provider>