<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base glass material -->
    <item>
        <shape>
            <solid android:color="#0a000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Honest glass reflection -->
    <item android:top="1dp" android:bottom="40dp" android:left="1dp" android:right="1dp">
        <shape>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#1a00ff88"
                android:endColor="#00000000" />
            <corners android:radius="11dp" />
        </shape>
    </item>
</layer-list>