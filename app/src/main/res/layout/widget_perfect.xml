<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/professional_glow"
    android:padding="16dp">

    <!-- Main Ratio -->
    <TextView
        android:id="@+id/perfect_ratio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="87%"
        android:textColor="#00FF88"
        android:textSize="56sp"
        android:textStyle="bold" />

    <!-- Task Counts -->
    <TextView
        android:id="@+id/perfect_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 signal"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/perfect_noise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 noise"
        android:textColor="#CCCCCC"
        android:textSize="12sp" />

    <!-- Trend -->
    <TextView
        android:id="@+id/perfect_trend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trending up"
        android:textColor="#888888"
        android:textSize="10sp"
        android:layout_marginTop="4dp" />

</LinearLayout>