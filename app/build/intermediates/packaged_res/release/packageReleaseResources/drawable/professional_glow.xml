<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Professional central glow - Signal green radial gradient -->
    <gradient
        android:type="radial"
        android:gradientRadius="200dp"
        android:centerX="0.5"
        android:centerY="0.5"
        android:startColor="#1a00ff88"
        android:centerColor="#0d00ff88"
        android:endColor="#000a0a0a" />

    <corners android:radius="20dp" />

    <!-- Subtle border for definition -->
    <stroke
        android:width="1dp"
        android:color="#1a00ff88" />

</shape>